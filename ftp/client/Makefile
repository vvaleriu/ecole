NAME = client
BIN_PATH = ../bin
CC = gcc
CFLAGS = -Wall -Wextra -Werror
HEADERS = -I./headers -I../libs/libft/headers  -I../common/headers
LIBS = -L../libs -lft
RM = rm -rf
vpath %.c ./srcs ./srcs/network ./srcs/tools ./srcs/commands ../common/srcs
vpath %.h headers ../libs/libft/headers ../common/headers
vpath %.a ../libs/
OBJ = $(SRC:%.c=$(OP)%.o)
OP = ./.obj/
SRC = main.c								\
		init.c 								\
		cl_connect.c						\
		cl_kill.c 							\
		cmd_input.c							\
		usage.c 							\
		pterr.c 							\
		error_checker.c 					\

all: $(NAME)

deb: 
	gcc -g3 -I./libft/includes main.c libft/srcs/*.c libft/srcs/printf/*.c libft/srcs/printf/conversions/*.c libft/srcs/printf/flags/*.c

$(NAME): $(OBJ)
	@$(CC) $(CFLAGS) -o $(BIN_PATH)/$@ $(OBJ) $(HEADERS) $(LIBS)

$(OP)%.o: %.c
	@(mkdir -p $(OP))
	@$(CC) -c $(CFLAGS) $< -o $@ $(HEADERS)

clean:
	@$(RM) $(OP)

fclean: clean
	@$(RM) $(NAME)

re: fclean all

.PHONY: clean, re
